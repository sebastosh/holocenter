/* =Structure
-------------------------------------------------------------- */

/* first we reset the browser defaults */
@import url('styles/reset.css');

body {
	margin: 0;
	padding: 0;
	background:#222;
}
a {text-decoration:none; color: #00AA00; outline:none; border:none;}
a:hover {text-decoration:underline; color: #00AA00;}
strong {
	font-style:normal;
	font-weight:bold;
}
#page {
	display: block;
	width:960px;
	margin:0 auto;
	background:#CCFFCC;
	/*margin: 1em;*/
}
#primary {
	/*float: left;
	margin: 0 -240px 0 0;*/
	width: 100%;
}
#content {
	/*margin: 0 280px 0 0;*/
	background:#EEE;
}
#main .widget-area {
	float: right;
	overflow: hidden;
	width: 220px;
}
#colophon {
	clear: both;
	display: block;
	width: 100%;
}

/* Increase the size of the content area for templates without sidebars */
.full-width #content,
.image-attachment #content,
.error404 #content {
	margin: 0;
}

/* Text meant only for screen readers */
.screen-reader-text,
.section-heading {
  position: absolute !important;
  clip: rect(1px 1px 1px 1px); /* IE6, IE7 */
  clip: rect(1px, 1px, 1px, 1px);
}

/* Alignment */
.alignleft {
	display: inline;
	float: left;
	padding:5px;
	border:1px solid #999;
}
.alignright {
	display: inline;
	float: right;
		padding:5px;
	border:1px solid #999;
}
.aligncenter {
	clear: both;
	display: block;
	margin-left: auto;
	margin-right: auto;
}


